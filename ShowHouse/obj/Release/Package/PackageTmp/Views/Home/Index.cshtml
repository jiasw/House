                value:data[i].Num
            });
        }
        let areapieoption = {
            title: {
                text: '房屋均价占比',
                left: 'center',
                top: 20,
                textStyle: {
                    color: '#000'
                }
            },
            tooltip: {
                trigger: 'item',
                formatter: "{a} <br/>价格区间 {b}: 房屋数量 {c} ({d}%)"
            },
            legend: {
                orient: 'vertical',
                x: 'left',
                data:areapiedata.legendData
            },
            series: [
                {
                    name:'房屋均价',
                    type:'pie',
                    radius: ['50%', '70%'],
                    avoidLabelOverlap: false,
                    label: {
                        normal: {
                            show: false,
                            position: 'center'
                        },
                        emphasis: {
                            show: true,
                            textStyle: {
                                fontSize: '15',
                                fontWeight: 'bold'
                            }
                        }
                    },
                    labelLine: {
                        normal: {
                            show: false
                        }
                    },
                    data:areapiedata.seriesData
