</section>

<script type="text/javascript">
    var app = new Vue({
        el: '#app',
        data: {
            areanum: 0,//区域数量
            communitynum: 0,//小区数量
            housenum:0,//房屋数量
            maxprice:0,//最高均价
            maxpriceCount:0,//最高总价
            maxArea:0,//最高面积
        },
        methods:{
            loadbaseCount: function () {
                fetch("../Home/BaseCount")
                .then(response=>response.text())
                .then(data=>{
                    //console.log(data);
                let nums=data.split(",");
                app.$data.areanum=nums[2];
                app.$data.communitynum=nums[0];
                app.$data.housenum=nums[1];
                app.$data.maxprice=nums[3];
                app.$data.maxpriceCount=nums[4];
                app.$data.maxArea=nums[5];
            });
    },
    loadareaCountBar:function(){
        let dom = document.getElementById("container");
        let myChart = echarts.init(dom);
        let areapiedata={};

        fetch("../Home/AreaHouseCount")
        .then(response=>response.json())
        .then(data=>{
            //console.log(data);
        let len=data.length;
        areapiedata.legendData=[];
        areapiedata.seriesData=[];
        areapiedata.selected={};
        for (let i = 0; i < len; i++) {
            areapiedata.legendData.push(data[i].Name);
            areapiedata.seriesData.push({
                name:data[i].Name,
                value:data[i].Num
            });
            areapiedata.selected[data[i].Name]=true;
        }
        let areapieoption = {
            title : {
                text: '房屋销售占比',
                subtext: '数量占比',
                x:'center'
            },
            tooltip : {
                trigger: 'item',
                formatter: "{a} <br/>{b} : {c} ({d}%)"
            },
            legend: {
                type: 'scroll',
                orient: 'vertical',
                right: 10,
                top: 20,
                bottom: 20,
                data: areapiedata.legendData,

                selected: areapiedata.selected
            },
            series : [
                {
                    name: '区域名称',
                    type: 'pie',
                    radius : '55%',
                    center: ['40%', '50%'],
                    data: areapiedata.seriesData,
                    itemStyle: {
                        emphasis: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowColor: 'rgba(0, 0, 0, 0.5)'
                        }
                    }
                }
            ]
        };
        if (areapieoption && typeof areapieoption === "object") {
            myChart.setOption(areapieoption, true);
        }

    });



    },
    loadcommonityCountBar:function(){//加载销售房屋数量最多的小区前15
        let dom = document.getElementById("container1");
        let myChart = echarts.init(dom);
        let areapiedata={};

        fetch("../Home/CommunityHouseCount")
        .then(response=>response.json())
        .then(data=>{
            //console.log(data);
        let len=data.length;
        areapiedata.legendData=[];
        areapiedata.seriesData=[];
        for (let i = 0; i < len; i++) {
            areapiedata.legendData.push(data[i].Name);
            areapiedata.seriesData.push(data[i].Num);
        }
        let areapieoption  = {
            color: ['#3398DB'],
            tooltip : {
                trigger: 'axis',
                axisPointer : {            // 坐标轴指示器，坐标轴触发有效
                    type : 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
                }
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            xAxis : [
                {
                    type : 'category',
                    data : areapiedata.legendData,
                    axisTick: {
                        alignWithLabel: true
                    },
                    axisLabel: {
                        interval:0,
                        rotate:40
                    }

                }
            ],
            yAxis : [
                {
                    type : 'value'
                }
            ],
            series : [
                {
                    name:'直接访问',
                    type:'bar',
                    barWidth: '60%',
                    data:areapiedata.seriesData
                }
            ]
        };
        if (areapieoption && typeof areapieoption === "object") {
            myChart.setOption(areapieoption, true);
        }

    });
    },
    PricePie:function(){
        let dom = document.getElementById("container2");
        let myChart = echarts.init(dom);
        let areapiedata={};
        fetch("../Home/PricePie")
