@{
    ViewBag.Title = "房源信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        主页
        <small>信息概览</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> 主页</a></li>
        <li class="active">汇总</li>
    </ol>
</section>

<section class="content">
